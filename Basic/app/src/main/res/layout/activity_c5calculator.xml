<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6AE137"
    tools:context=".c5calculator">
    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:text="Calculator"
        android:textColor="#FF0000"
        android:textColorHint="#FF0000"
        android:textSize="40dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/E1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:background="#87ceeb"
        android:ems="10"
        android:hint="Enter 1st number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textColorHint="#00008B" />

    <EditText
        android:id="@+id/E2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:background="#87ceeb"
        android:hint="Enter 2nd number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textColorHint="#00008B" />

    <Button
        android:id="@+id/B1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:background="#00008B"
        android:text="Add" />

    <Button
        android:id="@+id/B2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:background="#8B7D00"
        android:text="Subtract" />

    <Button
        android:id="@+id/B3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:background="#00008B"
        android:text="MULTIPLY" />

    <Button
        android:id="@+id/B4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:background="#8B0010"
        android:text="DIVIDE" />

    <Button
        android:id="@+id/B5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:background="#00008B"
        android:text="MODULUS" />

    <TextView
        android:id="@+id/T2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="#87ceeb"
        android:inputType="number"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textColorHint="#FF0000" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="433dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="429dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</LinearLayout>